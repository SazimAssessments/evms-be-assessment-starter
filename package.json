{
  "name": "nest-mikro",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:migration:create": "dotenv -e ./.env -- mikro-orm migration:create",
    "db:migration:up": "dotenv -e ./.env -- mikro-orm migration:up",
    "db:migration:down": "dotenv -e ./.env -- mikro-orm migration:down",
    "db:migration:fresh": "dotenv -e ./.env -- mikro-orm migration:fresh",
    "db:seed": "dotenv -e ./.env -- mikro-orm seeder:run"
  },
  "dependencies": {
    "@mikro-orm/cli": "~6.2.0",
    "@mikro-orm/core": "~6.2.0",
    "@mikro-orm/migrations": "~6.2.0",
    "@mikro-orm/nestjs": "^5.2.3",
    "@mikro-orm/postgresql": "~6.2.0",
    "@mikro-orm/seeder": "~6.2.0",
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.4.8",
    "@nestjs/platform-express": "^10.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  }
}
